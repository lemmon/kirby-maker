{% extends layout('frontpage') %}

{% block title %}
{% if site.tagline.notEmpty %}{{ site.title }} &ndash; {{ site.tagline }}{% else %}{{ parent() }}{% endif %}
{% endblock %}

{% block hero %}
<div class="span1 py2 md-py4 col justify-center">
  <div class="w100 max70 mx py1 sd-px1 col ld-row justify-between items-center">

    {% if page.heroTitle.notEmpty
      or page.heroText.notEmpty
      or page.heroActions.notEmpty
    %}
    <div class="span1 max32 py1 md-py2">
      {% if page.heroTitle.notEmpty %}
      <h1 class="p1 h1 lh1 fw800">{{ page.heroTitle }}</h1>
      {% endif %}
      {% if page.heroText.notEmpty %}
      <h2 class="p1 h4 lh4 o80">{{ page.heroText }}</h2>
      {% endif %}
      {% if page.heroActions.notEmpty %}
      {% with { action: page.heroActions.toStructure.first } %}
      <div class="row">
        <div class="p1"><a class="button p1" href="{{ page(action.link).url ?: action.link.value }}">
          <span class="button__label px05 fw500 lh4 color-white uc">{{ action.label }}</span>
        </a></div>
      </div>
      {% endwith %}
      {% endif %}
    </div>
    {% endif %}

    {% if page.heroImage.notEmpty %}
    <div class="span1 max32 py1 md-py2">
      <div class="p1">
        <figure>
          <img
            class="block wmax ha mx"
            src="{{ page.heroImage.toFile.url }}"
          >
        </figure>
      </div>
    </div>
    {% endif %}

  </div>
</div>
{% if page.heroInfo.notEmpty %}
<hr class="px1 sd-px2 div o10">
<aside class="py1 sd-p1">

  <div class="x-grid">
    {% for item in page.heroInfo.toStructure %}
    <article class="px05 py075 row flex-wrap">
      {% if item.image.notEmpty %}
      <figure class="px05 py025">
        <img
          class="block"
          src="{{ item.image.toFile.url }}"
        >
      </figure>
      {% endif %}
      <div class="px025 span1" style="min-width: 18rem;">
        {% if item.title.notEmpty %}
        <h1 class="p025 h4 lh2 fw700">
          {%- if item.link.notEmpty -%}
          <a class="inlineblock ul:hover" href="{{ page(item.link).url ?: item.link.value }}">
          {%- endif -%}
            {{- item.title -}}
          {%- if item.link.notEmpty -%}
          </a>
          {%- endif -%}
        </h1>
        {% endif %}
        {% if item.text.notEmpty %}
        <div class="p025 o80">
          <p class="lh4">{{ item.text }}</p>
        </div>
        {% endif %}
        {% if item.link.notEmpty and item.action.notEmpty %}
        <a class="anchor p025 inlineblock link--chevron fw500 lh4" href="{{ page(item.link).url ?: item.link.value }}"><span class="ul:hover">{{ item.action }}</span></a>
        {% endif %}
      </div>
    </article>
    {% endfor %}
  </div>
  {% endif %}

</aside>
{% endblock %}

{% block main %}
<div class="wrap py2 md-py4">

  <section class="py1 md-py2">

    <div class="py1 sd-p1 md-grid2 ld-grid4">
      {% for i in 1..4 %}
      <article class="p075">
        <figure class="p025">
          <svg class="block bg-black-10" viewBox="0 0 4 3"></svg>
        </figure>
        <div class="p025">
          <h1 class="h5 lh3 fw700">Hello World!</h1>
        </div>
      </article>
      {% endfor %}
    </div>

  </section>

  <section class="py1 md-py2">

    <div class="py1 sd-p1 ld-grid3">
      {% for i in 1..3 %}
      <article class="p075">
        <figure class="p025">
          <svg class="block bg-black-10" viewBox="0 0 8 5"></svg>
        </figure>
        <div class="p025">
          <h1 class="h5 lh3 fw700">Hello World!</h1>
        </div>
      </article>
      {% endfor %}
    </div>

  </section>

</div>
{% endblock %}
